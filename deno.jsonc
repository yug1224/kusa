{
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["./"],
      "exclude": [".archive"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./"],
      "exclude": [".archive"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "always"
    }
  }
}
